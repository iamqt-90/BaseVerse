# .env - Backend (FastAPI)

# MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/dreamchain?retryWrites=true&w=majority
MONGO_DB_NAME=dreamchain

# IPFS (Pinata or Web3.Storage)
IPFS_API_KEY=your_ipfs_api_key
IPFS_API_SECRET=your_ipfs_secret

# AI/AgentKit
AGENTKIT_API_KEY=your_agentkit_key

# NFT/Blockchain
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
NFT_CONTRACT_ADDRESS=your_nft_contract_address
WALLET_PRIVATE_KEY=your_wallet_private_key

# Server
SECRET_KEY=your_fastapi_secret_key
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000
